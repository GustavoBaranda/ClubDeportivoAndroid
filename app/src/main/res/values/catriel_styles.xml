<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:padding">8sp</item>
        <item name="android:backgroundTint">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:text">Inscribir</item>
    </style>

    <style name="title">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="subtitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="editText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:hint">Ingresar DNI</item>

        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>
    <style name="marginRadioBtn">
        <item name="android:layout_marginEnd">40dp</item>
    </style>
    <style name="marginRadioGroup">
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="label">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>